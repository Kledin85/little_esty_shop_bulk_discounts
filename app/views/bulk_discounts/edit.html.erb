<h1>Edit Bulk Discount</h1>
<%= form_with url: merchant_bulk_discount_path, method: :patch, local: true do |f| %>
  <%= f.label :percentage_discount %>
  <%= f.number_field :percentage_discount, value: @bulk_discount.percentage_discount, required: true %>

  <%= f.label :quantity_threshold%>
  <%= f.number_field :quantity_threshold, value: @bulk_discount.quantity_threshold, required: true %>

  <%= f.hidden_field :merchant_id, value: @merchant.id %>

  <%= f.submit "Edit Discount" %>
<% end %>