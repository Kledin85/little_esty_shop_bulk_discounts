<h1>New Bulk Discount</h1>
<%= form_with url: merchant_bulk_discounts_path, method: :post, local: true do |f| %>
  <%= f.label :percentage_discount %>
  <%= f.number_field :percentage_discount, required: true %>

  <%= f.label :quantity_threshold%>
  <%= f.number_field :quantity_threshold, required: true %>

  <%= f.hidden_field :merchant_id, value: @merchant.id %>

  <%= f.submit "Add Discount" %>
<% end %>